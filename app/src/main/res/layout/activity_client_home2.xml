<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usfsafeteamapp.v2.ClientHome2" >


    <fragment
        android:id="@+id/map_frag2"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-6dp"
        android:layout_marginBottom="5dp" />



        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_autocomplete"
            android:layout_width="374dp"
            android:layout_height="50dp"
            android:autofillHints="Where to?"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="60dp">

            <fragment
                android:id="@+id/autocomplete_fragmentHome2"
                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="5dp"
                />

        </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/confirmRequestLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        >

            <TextView
                android:id="@+id/textViewEstimatedTimeHome2"
                android:layout_width="216dp"
                android:layout_height="31dp"
                android:layout_marginStart="95dp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="500dp"
                android:layout_marginEnd="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="74dp"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                />

            <Button
        android:id="@+id/buttonClientConfirmHome2"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="500dp"
        android:layout_marginTop="528dp"
        android:layout_marginEnd="93dp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="30dp"
        android:text="Confirm"
        android:visibility="invisible"/>

        <Button
            android:id="@+id/buttonClientCancelHome2"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="95dp"
            android:layout_marginLeft="500dp"
            android:layout_marginTop="528dp"
            android:layout_marginEnd="93dp"
            android:layout_marginRight="55dp"
            android:layout_marginBottom="30dp"
            android:text="Cancel Ride"
            android:visibility="invisible"/>

    </RelativeLayout>
</FrameLayout>

