<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usfsafeteamapp.v2.DriverHome2" >

    <fragment
        android:id="@+id/map_frag"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/customerInfo"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:elevation="1dp"
        android:orientation="vertical"
        android:translationZ="1dp"
        android:visibility="invisible">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:orientation="vertical"
            android:paddingLeft="40sp">

            <TextView
                android:id="@+id/textViewClientDestination"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="128dp"
                android:layout_marginLeft="136dp"
                android:layout_marginTop="6dp"
                android:paddingBottom="10sp"
                android:text="Destination: " />

            <TextView
                android:id="@+id/textViewClientName"
                android:layout_width="89dp"
                android:layout_height="27dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="128dp"
                android:layout_marginLeft="158dp"
                android:layout_marginBottom="30dp"
                android:paddingTop="20sp"
                android:paddingBottom="10sp"
                android:text="name:" />


        </RelativeLayout>

        <com.ebanx.swipebtn.SwipeButton
            android:id="@+id/swipe_btn"
            android:layout_width="275dp"
            android:layout_height="53dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"

            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="68dp"
            android:layout_marginLeft="68dp"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp"
            android:layout_marginBottom="16dp"
            android:visibility="visible"
            app:button_background="@drawable/shape_button"
            app:button_bottom_padding="20dp"
            app:button_image_disabled="@drawable/ic_chevron_right_black_24dp"
            app:button_image_enabled="@drawable/ic_chevron_right_black_24dp"
            app:button_image_height="60dp"

            app:button_image_width="100dp"
            app:button_left_padding="20dp"
            app:button_right_padding="20dp"
            app:button_top_padding="20dp"
            app:has_activate_state="true"
            app:initial_state="disabled"
            app:inner_text="SWIPE TO CONFIRM"
            app:inner_text_background="@drawable/shape_rounded"
            app:inner_text_bottom_padding="18dp"
            app:inner_text_color="@android:color/white"
            app:inner_text_size="16sp"
            app:inner_text_top_padding="18dp" />


    </RelativeLayout>

    <Switch
        android:id="@+id/workingSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="Working" />
</FrameLayout>
